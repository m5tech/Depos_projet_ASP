@model exemple_mvc.Models.produit

@{
    ViewBag.Title = "Article | "+Model.NAME_PRODUIT;
    Layout = "~/Views/Shared/_LayoutGlobal.cshtml";
}

<div class="container" id="shop">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Bootstrap core CSS -->
    <!-- Custom styles for this template -->

    <div class="row">

        <div class="col-lg-3">
            <h1 class="my-4">@Model.NAME_PRODUIT </h1>
            <div class="list-group">
                <a href="http://localhost:52825/produits/mobile" class="list-group-item">Mobile</a>
                <a href="http://localhost:52825/produits/ordinateur" class="list-group-item">Ordinateur</a>
                <a href="http://localhost:52825/produits/system" class="list-group-item">Systéme De Surveillance</a>
                <a href="http://localhost:52825/produits/Show" class="list-group-item">Afficher tout</a>
            </div>
        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

            <div class="card mt-4">
                <img class="card-img-top img-fluid" src="~/img/portfolio/@Model.IMAGE">
                <div class="card-body">
                    <h3 class="card-title">@Model.NAME_PRODUIT</h3>
                    <h4>@Model.PRIX DH</h4>
                    <p class="card-text">@Model.DESCRIPTION_PR</p>

                    <label for="qty">Quantité :</label>
                    <input type="number" id="qty" name="qty" min="1" max="20" value="1" style="margin-right:60px;">
                    <a href="#" class="btn btn-success">ACHETER</a> <a href="@Url.Action("Add", "AddToCart", new { produit = Model,Id=Model.ID_PR }))" class="btn btn-success"><i class="fas fa-cart-plus"></i></a>
                </div>
            </div>
            <!-- /.card -->

            <!-- /.col-lg-9 -->

        </div>

    </div>
</div>
<!-- /.container -->


