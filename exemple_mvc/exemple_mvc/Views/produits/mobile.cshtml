@model IEnumerable<exemple_mvc.Models.produit>

@{
    ViewBag.Title = "Nos Téléphones";
    Layout = "~/Views/Shared/_LayoutGlobal.cshtml";
}

<div class="container">


    <div class="row" id="shop">

        <div class="col-lg-3" id="page-top">

            <h1 class="my-4">Notre Magazin</h1>
            <div class="list-group">
                @using (Html.BeginForm("Show", "produits", FormMethod.Get, new { @class = "list-group" }))
                {
                    <input type="text" name="Search" placeholder="Tapez Votre Produit à chercher"> <input type="submit" value="Chercher" /><br />
                }
                <a href="http://localhost:52825/produits/mobile" class="list-group-item">Mobiles</a>
                <a href="http://localhost:52825/produits/ordinateur" class="list-group-item">Ordinateurs</a>
                <a href="http://localhost:52825/produits/system" class="list-group-item">Systémes De Surveillance</a>
                <a href="http://localhost:52825/produits/Show" class="list-group-item">Afficher tout</a>
            </div>

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="~/img/portfolio/100.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/img/portfolio/102.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/img/portfolio/103.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div class="row">
                @foreach (var item in Model)
                {
                    if (item.TYPE_PRODUIT == "mobile")
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <a href="http://localhost:52825/produits/ArticleInfo/@item.ID_PR"><img class="card-img-top" src="~/img/portfolio/@Html.DisplayFor(modelItem => item.IMAGE)"></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a>@Html.ActionLink(item.NAME_PRODUIT, "ArticleInfo", new { id = item.ID_PR })</a>
                                    </h4>
                                    <h5> @Html.DisplayFor(modelItem => item.PRIX) DH</h5>
                                    <p class="card-text">@Html.DisplayFor(modelItem => item.DESCRIPTION_PR)</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted" style="font-weight:bold;">Catégorie : Téléphone</small>
                                </div>
                            </div>
                        </div>
                    }

                }
                @if (Model.Count() == 0)
                {
                    <h1>Produit Introuvable</h1>
                }
            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>